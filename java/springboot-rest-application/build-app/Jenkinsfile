pipeline {
   agent any

   stages {
      stage('Download') {
         steps {
            git 'https://github.com/Yanzord/yanzord-sandbox.git'
         }
      }

      stage('Test') {
         steps {
            sh '''
                 cd java/springboot-rest-application
                 ./gradlew test
               '''
         }
      }

      stage('Build') {
         steps {
            sh '''
                 cd java/springboot-rest-application
                 ./gradlew clean build
               '''
         }
      }
   }
}
