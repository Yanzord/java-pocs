pipeline {
   agent any

   stages {
      stage('Download') {
         steps {
            git 'https://github.com/Yanzord/yanzord-sandbox.git'
         }
      }

      stage('Test') {
         steps {
            sh '''
                 cd java/springboot-rest-application
                 ./gradlew test
               '''
         }
      }

      stage('Build') {
         steps {
            sh '''
                 cd java/springboot-rest-application
                 ./gradlew clean build
               '''
         }
      }

      stage('Artifactory') {
         steps {
            rtServer (
                id: 'jenkins-artifactory-id',
                url: 'http://localhost:8081/artifactory',
                username: 'admin',
                password: 'beirari0@2014'
            )
            rtUpload (
                serverId: 'jenkins-artifactory-id',
                spec: '''{
                      "files": [
                        {
                          "pattern": "build/libs/*.war",
                          "target": "gradle-dev-local/"
                        }
                     ]
                }'''
            )
         }
      }
   }
}
