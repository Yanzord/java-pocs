{
  "builders":[
    {
      "type": "docker",
      "image": "ubuntu:18.04",
      "commit": true,
      "changes": [
        "CMD [\"java\", \"-jar\", \"/usr/local/springboot-rest.war\"]"
      ]
    }
  ],
  "provisioners":[
    {
      "type": "shell",
      "inline": ["apt install python3.7"]
    },
    {
      "type": "file",
      "source": "/home/ilegra242/.jenkins/workspace/infra/application/springboot-rest/springboot-rest.war",
      "destination": "/usr/local/springboot-rest.war"
    },
    {
      "type": "ansible",
      "playbook_file": "playbook.yml"
    }
  ],
  "post-processors":[
    [
      {
        "type": "docker-tag",
        "repository": "yanzord/cloud-sandbox",
        "tag": "springboot-rest-app"
      },
      {
        "type": "docker-push",
        "login": "true",
        "login_username": "{{user `username`}}",
        "login_password": "{{user `password`}}"
      }
    ]
  ]
}