{
  "builders":[
    {
      "type": "docker",
      "image": "ubuntu:18.04",
      "commit": true,
      "changes": [
        "ENTRYPOINT [\"java\", \"-jar\", \"/usr/local/springboot-rest-1.0.war\"]"
      ]
    }
  ],
  "provisioners":[
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install python3 python3-apt -yq"
      ]
    },
    {
      "type": "file",
      "source": "../../../app/springboot-rest-1.0.war",
      "destination": "/usr/local/springboot-rest-1.0.war"
    },
    {
      "type": "ansible",
      "playbook_file": "playbook.yml"
    }
  ],
  "post-processors":[
    [
      {
        "type": "docker-tag",
        "repository": "yanzord/cloud-sandbox",
        "tag": "springboot-rest-app"
      },
      {
        "type": "docker-push",
        "login": "true",
        "login_username": "{{user `username`}}",
        "login_password": "{{user `password`}}"
      }
    ]
  ]
}