pipeline {
   agent any

   stages {
      stage('download artifactory') {
         steps {
            rtServer (
               id: 'jenkins-artifactory-id',
               url: 'http://localhost:8081/artifactory',
               username: 'admin',
               password: 'beirari0@2014'
            )

            rtDownload (
               serverId: 'jenkins-artifactory-id',
               spec:
                  '''
                     {
                        "files":
                        [
                           {
                              "pattern": "gradle-release-local/springboot-rest-app/",
                              "target": "springboot-rest-app"
                           }
                        ]
                     }
                  '''
            )
         }
      }

      stage('provisioning') {
         steps {
            sh '''
                  cd java/springboot-rest-app/infra
                  packer build build.json
               '''
         }
      }
   }
}
